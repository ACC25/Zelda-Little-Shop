<div class="page-header">
<div class="container">
  <h1>Edit <%= @item.name %> </h1>
</div>
</div>

<div class="container">
  <%= form_for @item do |f|  %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.label :price %>
  <%= f.number_field :price %><br>

  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: true %><br>

  <%= f.submit %><br>
  <% end %>
</div>
