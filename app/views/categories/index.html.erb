<div class="container">
  <div class="page-header categories">
    <h2>Categories</h2>
  </div>
</div>

<% @categories.each do |category| %>
  <a href="<%= category_path(category) %>">
    <div class="container categories">
      <div class="row">
        <div class="col-sm-3 col-md-4">
          <div class="thumbnail">
            <img src="/assets/<%="#{category.slug}"%>_icon.png" alt="general goods icon">
            <div class="caption">
              <h3><%= category.name %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
<% end %>
