<div class="page-header">
<div class="container">
  <h1>All Items</h1>
</div>

</div>
<div class="container">
  <%= @items.each do |item| %>
    <%= link_to item.name, item_path(item) %>
    <% if item.retired_item? == false %>
      <%= button_to "Add #{item.name} to Cart", cart_path(item_id: item.id), class: "btn btn-danger btn-xs" %>
    <% end %>
  <% end %>
</div>

<%= link_to "Cart", cart_path %>
<%= link_to "Categories", categories_path %>
