<div class="page-header">
  <div class="container">
    <h2><%= @item.name %></h2>
  </div>
</div>
<div class="row">
  <div class="container">
    <div class="col-sm-10 col-sm-offset-2">
      <div class="list-group">
        <ul class="col-md-8 list-unstyled">
          <img src="<%=@item.show%>">
          <!-- <%= image_tag @item.avatar.url %><br> -->
          <li class="list-group-item"><strong>Description:</strong><%= @item.description %></li>
          <li class="list-group-item"><strong>Price:</strong><%= @item.price %> Rupees</li>
          <li class="list-group-item"><strong>In Stock? </strong><%= @status %></li>
          <% if @item.retired_item? == false %>
            <%= button_to "Add #{@item.name} to Cart", cart_path(item_id: @item.id), class: "btn btn-success btn-xs" %><br>
          <% end %>
          <%= link_to "Back to all items", items_path, class: "btn btn-default btn-xs" %>
        </ul>
      </div>
    </div>
  </div>
</div>
